<%= form_with(model: [@lounge, @event]) do |form| %>
  <% if event.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :event_name, style: "display: block" %>
    <%= form.text_field :event_name %>
  </div>

  <div>
    <%= form.label :event_type, style: "display: block" %>
    <%= form.text_field :event_type %>
  </div>

  <div>
    <%= form.label :event_date, style: "display: block" %>
    <%= form.date_field :event_date, min: Date.today %>
  </div>

  <div>
    <%= form.label :event_description, style: "display: block" %>
    <%= form.text_area :event_description %>
  </div>

  <div>
    <%= form.label :event_url, style: "display: block" %>
    <%= form.text_field :event_url %>
  </div>

  <div>
    <%= form.label :zoom_code, style: "display: block" %>
    <%= form.text_field :zoom_code %>
  </div>

  <div>
    <%= form.label :rsvp_needed, style: "display: block" %>
    <%= form.check_box :rsvp_needed %>
  </div>

  <div>
    <%= form.label :is_virtual, style: "display: block" %>
    <%= form.check_box :is_virtual %>
  </div>

  <div>
    <%= form.label :maximum_capacity, style: "display: block" %>
    <%= form.number_field :maximum_capacity %>
  </div>

  <div>
    <%= form.label :start_time, style: "display: block" %>
    <%= form.time_field :start_time %>
  </div>

  <div>
    <%= form.label :end_time, style: "display: block" %>
    <%= form.time_field :end_time %>
  </div>

  <div>
    <%= form.label :members_only, style: "display: block" %>
    <%= form.check_box :members_only %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
