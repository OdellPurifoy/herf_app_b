<%= form_with(model: lounge) do |form| %>
  <% if lounge.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(lounge.errors.count, "error") %> prohibited this lounge from being saved:</h2>

      <ul>
        <% lounge.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :phone_number, style: "display: block" %>
    <%= form.text_field :phone_number %>
  </div>

  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.fields_for :address do |address_form| %>
      <%= address_form.label :address_street_1, style: "display: block" %>
      <%= address_form.text_field :address_street_1 %>

      <%= address_form.label :address_street_2, style: "display: block" %>
      <%= address_form.text_field :address_street_2 %>

      <%= address_form.label :city, style: "display: block" %>
      <%= address_form.text_field :city %>

      <%= address_form.label :state, style: "display: block" %>
      <%= address_form.text_field :state %>

      <%= address_form.label :zipcode, style: "display: block" %>
      <%= address_form.text_field :zipcode %>
    <% end %>
  </div>

  <div>
    <%= form.label :logo, style: "display: block" %>
    <%= form.file_field :logo %>
  </div>
  
  <div>
    <%= form.label :display_images, style: "display: block" %>
    <%= form.file_field :display_images, multiple: true %>
  </div>

  <div>
    <%= form.label :alcohol_served, style: "display: block" %>
    <%= form.check_box :alcohol_served %>
  </div>

  <div>
    <%= form.label :food_served, style: "display: block" %>
    <%= form.check_box :food_served %>
  </div>

  <div>
    <%= form.label :outside_alcohol_allowed, style: "display: block" %>
    <%= form.check_box :outside_alcohol_allowed %>
  </div>

  <div>
    <%= form.label :outside_cigars_allowed, style: "display: block" %>
    <%= form.check_box :outside_cigars_allowed %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
